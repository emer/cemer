#!/bin/bash
set -e

#sudo apt-get install build-essential gnupg lintian fakeroot debhelper dh-make subversion-tools devscripts mercurial

# Repository changed from Mercurial to grey, and Qt5 build paths provided as option. Probably this will become default 
# by September 2014 and we can remove the conditionals. 20140522 tmankad

echo "Building Quarter from source repository (grey.colorado.edu)"

QTVER="qt4"
CONFFLAGS=""
read -p "Use QT5? [Y/n]:" 
if [ -z $REPLY ]; then
  QTVER="qt5"
  if [ -z $QTDIR ]; then
    read -p "Where is Qt5 installed (leave blank if installed from package)?" QTDIR; fi
fi

if [ "$QTVER" == "qt5" ]; then
  if [ -z $QTDIR ]; then
    export CPPFLAGS="-I/usr/include/qt5/QtCore -I/usr/include/qt5/QtWidgets -I/usr/include/qt5/QtOpenGL -I/usr/include/qt5/QtGui -L/usr/lib/x86_64-linux-gnu/ -fPIC"
  else
    export CPPFLAGS="-I$QTDIR/include/QtCore -I$QTDIR/include/QtWidgets -I$QTDIR/include/QtOpenGL -I$QTDIR/include/QtGui -fPIC"
    export CONFFLAGS="--with-qt=${QTDIR}"
  fi
fi

QUARTER_VERSION=1.0
DEBEMAIL='brian.mingus@colorado.edu'
DEBFULLNAME='Brian Mingus'
REPONAME=`lsb_release -cs` # e.g., "maverick"

QUARTER_BLD_DIR=libquarter0-${QUARTER_VERSION}
QUARTER_BLD_PATH=/tmp/${QUARTER_BLD_DIR}
rm -fr ${QUARTER_BLD_PATH}
# Quarter in the grey repository builds against (at least) libcoin80
svn co --username anonymous --password emergent https://grey.colorado.edu/svn/coin3d/quarter/trunk ${QUARTER_BLD_PATH}
# Create tarball (?)
cd /tmp
tar -czf libquarter0_${QUARTER_VERSION}.orig.tar.gz ${QUARTER_BLD_DIR}
# Create debian packaging directory
cd ${QUARTER_BLD_DIR}
mkdir -p debian

#################################################
# Create debian/changelog
#################################################
cat > debian/changelog <<Quarter
libquarter0 (1.0-0ubuntu1) ${REPONAME}; urgency=low

  * Initial release (LP: #364748)

 -- ${DEBFULLNAME} <${DEBEMAIL}>  $(date -R)
Quarter

#################################################
# Create debian/control
#################################################
if [ "$QTVER" == "qt5" ] && [ -z $QTDIR ]; then
  QT_BLD_DEPS="qt5-default, qttools5-dev, qtlocation5-dev, libqt5designer5, libqt5webkit5-dev, qtdeclarative5-dev, qtsensors5-dev, qtlocation5-dev"
fi

cat > debian/control <<Quarter
Source: libquarter0
Section: graphics
Priority: extra
Maintainer: Ubuntu MOTU Developers <ubuntu-motu@lists.ubuntu.com>
XSBC-Original-Maintainer: ${DEBFULLNAME} <${DEBEMAIL}>
Build-Depends: debhelper (>= 7.0.17), libcoin80-dev, pkg-config, ${QT_BLD_DEPS}
Standards-Version: 3.9.1

Homepage: http://www.coin3d.org/lib/quarter
Package: libquarter0
Conflicts: libquarter
Replaces: libquarter
Architecture: any
Depends: \${shlibs:Depends}, \${misc:Depends}
Description: Glue between Coin3D and Qt
 A light-weight glue library that provides seamless integration 
 between Kongsberg SIM's Coin high-level 3D visualization library and
 Nokia's Qt 2D user interface library.

Quarter

#################################################
# Create debian/copyright
#################################################
cat > debian/copyright <<Quarter

This package was debianized by:

    ${DEBFULLNAME} <${DEBEMAIL}> on $(date -R)

It was downloaded from:

    http://www.coin3d.org/lib/quarter

Upstream Author:

    Coin3D <help@coin3d.org>

Copyright:

     Copyright 1998-2009 by Systems in Motion. 

License:

     This file is part of the SIM Quarter extension library for Coin.
 
     Quarter is free software; you can redistribute it and/or modify
     it under the terms of the GNU General Public License as published by
     the Free Software Foundation; either version 2 of the License, or
     (at your option) any later version.

     Quarter is distributed in the hope that it will be useful,
     but WITHOUT ANY WARRANTY; without even the implied warranty of
     MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
     GNU General Public License for more details.

     You should have received a copy of the GNU General Public License
     along with this package; if not, write to the Free Software
     Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301 USA

The Debian packaging is:

    Copyright 2009, ${DEBFULLNAME} <${DEBEMAIL}>

and is licensed under the GPL, see above.

X-Comment: On Debian GNU/Linux systems, the complete text of the GNU General
 Public License can be found in the /usr/share/common-licenses/GPL-2 file.

Quarter

#################################################
# debian/rules makefile
#################################################
cat > debian/rules <<Quarter
#!/usr/bin/make -f

build: build-stamp
build-stamp:
	dh build
	touch build-stamp

override_dh_auto_configure:
	dh_auto_configure -- --disable-pkgconfig ${CONFFLAGS}

clean:
	dh clean

install: build install-stamp
install-stamp:
	dh install
	touch install-stamp

binary-arch: install
	dh binary-arch

binary-indep: install
	dh binary-indep

binary: binary-arch binary-indep
Quarter

#################################################
# debian/compat 
#################################################
cat > debian/compat <<Quarter
7
Quarter

#debuild -S -us -uc
debuild -i -b -us -uc

